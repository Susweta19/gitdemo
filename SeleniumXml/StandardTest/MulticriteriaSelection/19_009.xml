<?xml version="1.0" encoding="utf-8"?>
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Check the ability to modify a criteria group</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associative test start</Message>
    <Actions>
      <Login>
        <Message>Login</Message>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <MultiCriteria>
            <Actions>
              <Content>
                <Actions>
                  <CriteriaTab>
                    <Actions>
                      <Content>
                        <Actions>
                          <IsButtonDisabled>
                            <Parameters>
                              <ButtonName>Modify the group...</ButtonName>
                            </Parameters>
                            <ExpectedResult>
    												true
    											</ExpectedResult>
                          </IsButtonDisabled>
                          <AddNewGroup>
                            <Actions>
                              <Content>
                                <Actions>
                                  <Name>
                                    <Parameters>
                                      <groupName>Test</groupName>
                                    </Parameters>
                                  </Name>
                                </Actions>
                              </Content>
                              <Ok>
                                <Parameters>
                                  <validate>
    															true
    														</validate>
                                </Parameters>
                              </Ok>
                            </Actions>
                          </AddNewGroup>
                          <CriteriaTree>
                            <Actions>
                              <SelectEntity>
                                <Parameters>
                                  <nodes>
                                    <path>Test</path>
                                  </nodes>
                                </Parameters>
                              </SelectEntity>
                            </Actions>
                          </CriteriaTree>
                          <ModifyTheGroup>
                            <Actions>
                              <Content>
                                <Actions>
                                  <Name>
                                    <Parameters>
                                      <groupName>abcd</groupName>
                                    </Parameters>
                                  </Name>
                                </Actions>
                              </Content>
                              <Ok>
                                <Parameters>
                                  <validate>
    															true
    														</validate>
                                </Parameters>
                              </Ok>
                            </Actions>
                          </ModifyTheGroup>
                        </Actions>
                      </Content>
                      <Close />
                    </Actions>
                  </CriteriaTab>
                </Actions>
              </Content>
            </Actions>
          </MultiCriteria>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>