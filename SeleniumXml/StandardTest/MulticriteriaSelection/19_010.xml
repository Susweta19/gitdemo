<?xml version="1.0" encoding="utf-8"?>
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Select a criteria group and click on the 'Delete the group' button--When a group has been selected (highlighted), a confirming window will appear :Click on the 'OK' button, the selected group and all its sub-criterias will be deleted;Click on the 'Cancel' button, the selected group won't be deleted;If no group has been selected (highlighted), the button will be deactivated</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associative test start</Message>
    <Actions>
      <Login>
        <Message>Login</Message>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <NavigationTree>
            <Actions>
              <SelectOT>
                <Actions>
                  <Select>
                    <Parameters>
                      <value>TEST_MulticriteriaSelection</value>
                    </Parameters>
                  </Select>
                </Actions>
              </SelectOT>
            </Actions>
          </NavigationTree>
          <MultiCriteria>
            <Actions>
              <Content>
                <Actions>
                  <CriteriaTab>
                    <Actions>
                      <Content>
                        <Actions>
                          <IsButtonDisabled>
                            <Parameters>
                              <ButtonName>Delete the group</ButtonName>
                            </Parameters>
                          </IsButtonDisabled>
                          <AddNewGroup>
                            <Actions>
                              <Content>
                                <Actions>
                                  <Name>
                                    <Parameters>
                                      <groupName>Sub</groupName>
                                    </Parameters>
                                  </Name>
                                </Actions>
                              </Content>
                              <Ok>
                                <Parameters>
                                  <validate>
    															true
    														</validate>
                                </Parameters>
                              </Ok>
                            </Actions>
                          </AddNewGroup>
                          <CriteriaTree>
                            <Actions>
                              <SelectEntity>
                                <Parameters>
                                  <nodes>
                                    <path>Sub</path>
                                  </nodes>
                                </Parameters>
                              </SelectEntity>
                            </Actions>
                          </CriteriaTree>
                          <DeleteTheGroup>
                            <Actions>
                            	<ClosePopupWithinFrame>
                            		<Parameters>
                            			<result>true</result>
                            		</Parameters>
                            	</ClosePopupWithinFrame>
                            	
                            </Actions>
                          </DeleteTheGroup>
                        </Actions>
                      </Content>
                      <Close />
                    </Actions>
                  </CriteriaTab>
                </Actions>
              </Content>
            </Actions>
          </MultiCriteria>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>