<?xml version="1.0" encoding="utf-8"?>
<!--The 'Select a Color' window will appear-->
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Check the availability of the 'Color' window dropdown list for customize the color</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associativeteststart</Message>
    <Actions>
      <Login>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <NavigationTree>
            <Actions>
              <SelectOT>
                <Actions>
                  <Select>
                    <Parameters>
                      <value>TEST_for_Richtext</value>
                    </Parameters>
                  </Select>
                </Actions>
              </SelectOT>
              <EntityTree>
                <Actions>
                  <SelectEntity>
                    <Parameters>
                      <nodes>
                        <path>New</path>
                      </nodes>
                    </Parameters>
                  </SelectEntity>
                </Actions>
              </EntityTree>
            </Actions>
          </NavigationTree>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <Clear></Clear>
                      <SetFontcolor>
                        <Parameters>
                          <custom>true</custom>
                        </Parameters>
                        <Actions>
                          <Red>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>255</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Red>
                          <Green>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>0</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Green>
                          <Blue>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>0</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Blue>
                          <Validate>
                            <Parameters>
                            </Parameters>
                          </Validate>
                        </Actions>
                      </SetFontcolor>
                      <SetFontcolorFromCustomList>
                        <Parameters>
                          <index>0</index>
                        </Parameters>
                      </SetFontcolorFromCustomList>
                      <Write>
                        <Parameters>
                          <value>This text is colord with custom color</value>
                        </Parameters>
                      </Write>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Ok>
                <Parameters>
                </Parameters>
              </Ok>
            </Actions>
          </Edit>
          <ReadForm>
            <Actions>
              <RichText>
                <Parameters>
                  <attrId>92</attrId>
                </Parameters>
                <Actions>
                  <ReadTextColor>
                    <Parameters>
                      <ExpectedTextColor>Red</ExpectedTextColor>
                    </Parameters>
                  </ReadTextColor>
                </Actions>
              </RichText>
            </Actions>
          </ReadForm>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <Clear></Clear>
                      <SetFontcolor>
                        <Parameters>
                          <ColorTitle>Black</ColorTitle>
                        </Parameters>
                        <Actions>
                        </Actions>
                      </SetFontcolor>
                      <Write>
                        <Parameters>
                          <value>This text is colord without any color</value>
                        </Parameters>
                      </Write>
                      <SetFontcolor>
                        <Parameters>
                          <custom>true</custom>
                        </Parameters>
                        <Actions>
                          <Red>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>0</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Red>
                          <Green>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>0</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Green>
                          <Blue>
                            <Actions>
                              <Write>
                                <Parameters>
                                  <value>255</value>
                                </Parameters>
                              </Write>
                            </Actions>
                          </Blue>
                          <Validate>
                            <Parameters>
                              <Validate>false</Validate>
                            </Parameters>
                          </Validate>
                        </Actions>
                      </SetFontcolor>
                      <SelectAll></SelectAll>
                      <SetFontcolorFromCustomList>
                        <Parameters>
                          <index>0</index>
                        </Parameters>
                      </SetFontcolorFromCustomList>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Ok>
                <Parameters>
                </Parameters>
              </Ok>
            </Actions>
          </Edit>
          <ReadForm>
            <Actions>
              <RichText>
                <Parameters>
                  <attrId>92</attrId>
                </Parameters>
                <Actions>
                  <ReadTextColor>
                    <Parameters>
                      <ExpectedTextColor>Black</ExpectedTextColor>
                    </Parameters>
                  </ReadTextColor>
                </Actions>
              </RichText>
            </Actions>
          </ReadForm>
          <Logout>
          	<Actions>
          		<ReadPopUpMessage>
          			<Actions>
          				<ElementAt>
          					<Parameters>
          						<index>0</index>
          					</Parameters>
          					<ExpectedResult>Do you really want to quit TEEXMA?</ExpectedResult>
          				</ElementAt></Actions>
          		</ReadPopUpMessage>
          		<CloseConfirmationPopup>
          			<Parameters>
          				<result>true</result>
          			</Parameters>
          		</CloseConfirmationPopup></Actions>
          </Logout>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>