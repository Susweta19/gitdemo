<?xml version="1.0" encoding="utf-8"?>
<!--"Check the ability to align the selected Image
'Alignment'' dropdown list"-->
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Check the availability of Link Name input</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associativeteststart</Message>
    <Actions>
      <Login>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <NavigationTree>
            <Actions>
              <SelectOT>
                <Actions>
                  <Select>
                    <Parameters>
                      <value>TEST_for_Richtext</value>
                    </Parameters>
                  </Select>
                </Actions>
              </SelectOT>
              <EntityTree>
                <Actions>
                  <SelectEntity>
                    <Parameters>
                      <nodes>
                        <path>New</path>
                      </nodes>
                    </Parameters>
                  </SelectEntity>
                </Actions>
              </EntityTree>
            </Actions>
          </NavigationTree>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <Clear />
                      <InsertLink>
                        <Actions>
                          <Content>
                            <Actions>
                              <ChangeTab>
                                <Parameters>
                                  <tabName>External link</tabName>
                                </Parameters>
                              </ChangeTab>
                              <LinkNameA>
                                <Actions>
                                  <Write>
                                    <Parameters>
                                      <value>Website1</value>
                                    </Parameters>
                                  </Write>
                                  <Read>
                                    <ExpectedResult>Website1</ExpectedResult>
                                  </Read>
                                  <Clear />
                                  <Write>
                                    <Parameters>
                                      <value>Website2</value>
                                    </Parameters>
                                  </Write>
                                  <Read>
                                    <ExpectedResult>Website2</ExpectedResult>
                                  </Read>
                                </Actions>
                              </LinkNameA>
                            </Actions>
                          </Content>
                          <Ok>
                            <Parameters>
                              <validate>
      													true
      												</validate>
                            </Parameters>
                          </Ok>
                        </Actions>
                      </InsertLink>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Ok>
                <Parameters>
                  <validate>true</validate>
                </Parameters>
              </Ok>
            </Actions>
          </Edit>
          <ReadForm>
            <Actions>
              <RichText>
                <Parameters>
                  <attrId>92</attrId>
                </Parameters>
                <Actions>
                  <RichTextLink>
                    <Parameters>
                      <linkName>Website2</linkName>
                    </Parameters>
                    <Actions>
                      <Click />
                    </Actions>
                  </RichTextLink>
                </Actions>
              </RichText>
            </Actions>
          </ReadForm>
          <Logout>
          	<Actions>
          		<ReadPopUpMessage>
          			<Actions>
          				<ElementAt>
          					<Parameters>
          						<index>0</index>
          					</Parameters>
          					<ExpectedResult>Do you really want to quit TEEXMA?</ExpectedResult>
          				</ElementAt></Actions>
          		</ReadPopUpMessage>
          		<CloseConfirmationPopup>
          			<Parameters>
          				<result>true</result>
          			</Parameters>
          		</CloseConfirmationPopup></Actions>
          </Logout>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>