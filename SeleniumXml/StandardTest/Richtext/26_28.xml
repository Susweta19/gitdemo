<?xml version="1.0" encoding="utf-8"?>
<!--Check the availability of the 'force the proportions' checkbox-->
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Check the availability of the 'force the proportions' checkbox</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associativeteststart</Message>
    <Actions>
      <Login>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <NavigationTree>
            <Actions>
              <SelectOT>
                <Actions>
                  <Select>
                    <Parameters>
                      <value>TEST_for_Richtext</value>
                    </Parameters>
                  </Select>
                </Actions>
              </SelectOT>
              <EntityTree>
                <Actions>
                  <SelectEntity>
                    <Parameters>
                      <nodes>
                        <path>New</path>
                      </nodes>
                    </Parameters>
                  </SelectEntity>
                </Actions>
              </EntityTree>
            </Actions>
          </NavigationTree>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <InsertImage>
                        <Actions>
                          <Content>
                            <Actions>
                              <SelectFile>
                                <Parameters>
                                  <path>#DocPath#Picture5.jpg</path>
                                </Parameters>
                              </SelectFile>
                              <ChangeTab>
                                <Parameters>
                                  <tabName>Appearance</tabName>
                                </Parameters>
                              </ChangeTab>
                              <!--We check the dimension are filled automatically-->
                              <DimensionsHeight>
                                <Actions>
                                  <Read>
                                    <ExpectedResult>73</ExpectedResult>
                                  </Read>
                                </Actions>
                              </DimensionsHeight>
                              <DimensionsWidth>
                                <Actions>
                                  <Read>
                                    <ExpectedResult>100</ExpectedResult>
                                  </Read>
                                </Actions>
                              </DimensionsWidth>
                              <!--We check force the proportion checkbox is ticked by defaut.-->
                              <ForceProportions>
                                <Actions>
                                  <Read>
                                    <ExpectedResult>
                              					true
                              				</ExpectedResult>
                                  </Read>
                                </Actions>
                              </ForceProportions>
                              <DimensionsHeight>
                                <Actions>
                                  <Write>
                                    <Parameters>
                                      <value>100</value>
                                    </Parameters>
                                  </Write>
                                  <PressEnter />
                                </Actions>
                              </DimensionsHeight>
                              <!--we check the option force the proportion is working-->
                              <DimensionsWidth>
                                <Actions>
                                  <Read>
                                    <ExpectedResult>137</ExpectedResult>
                                  </Read>
                                </Actions>
                              </DimensionsWidth>
                              <ForceProportions>
                                <Actions>
                                  <Tick />
                                </Actions>
                              </ForceProportions>
                              <!--We check force proportion not working when deactivated.-->
                              <DimensionsWidth>
                                <Actions>
                                  <Write>
                                    <Parameters>
                                      <value>150</value>
                                    </Parameters>
                                  </Write>
                                  <PressEnter />
                                </Actions>
                              </DimensionsWidth>
                              <DimensionsHeight>
                                <Actions>
                                  <Read>
                                    <ExpectedResult>100</ExpectedResult>
                                  </Read>
                                </Actions>
                              </DimensionsHeight>
                              <Cancel></Cancel>
                            </Actions>
                          </Content>
                        </Actions>
                      </InsertImage>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Close></Close>
            </Actions>
          </Edit>
          <Logout>
          	<Actions>
          		<ReadPopUpMessage>
          			<Actions>
          				<ElementAt>
          					<Parameters>
          						<index>0</index>
          					</Parameters>
          					<ExpectedResult>Do you really want to quit TEEXMA?</ExpectedResult>
          				</ElementAt></Actions>
          		</ReadPopUpMessage>
          		<CloseConfirmationPopup>
          			<Parameters>
          				<result>true</result>
          			</Parameters>
          		</CloseConfirmationPopup></Actions>
          </Logout>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>