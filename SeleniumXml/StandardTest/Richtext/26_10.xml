<?xml version="1.0" encoding="utf-8"?>
<!--Check the availability of the 'Font Size' dropdown list-->
<Actions xsi:noNamespaceSchemaLocation="../../../ConsoleLauncher/bin/Debug/netcoreapp3.0/TxWebTests.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TestHeader>
    <Parameters>
      <testData>
        <testPriority>0</testPriority>
        <testDescription>Check the availability of the 'Font Size' dropdown list</testDescription>
      </testData>
      <teexmaData>
        <customerResPath>customerResPath</customerResPath>
        <teexmaVersion>teexmaVersion</teexmaVersion>
        <databasePath>databasePath</databasePath>
      </teexmaData>
    </Parameters>
  </TestHeader>
  <TxInterface>
    <Message>Associativeteststart</Message>
    <Actions>
      <Login>
        <Parameters>
          <login>Administrator</login>
          <password>aaaaa</password>
        </Parameters>
      </Login>
      <MainWindow>
        <Actions>
          <NavigationTree>
            <Actions>
              <SelectOT>
                <Actions>
                  <Select>
                    <Parameters>
                      <value>TEST_for_Richtext</value>
                    </Parameters>
                  </Select>
                </Actions>
              </SelectOT>
              <EntityTree>
                <Actions>
                  <SelectEntity>
                    <Parameters>
                      <nodes>
                        <path>New</path>
                      </nodes>
                    </Parameters>
                  </SelectEntity>
                </Actions>
              </EntityTree>
            </Actions>
          </NavigationTree>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <Clear />
                      <SelectAll />
                      <SetFontSize>
                        <Parameters>
                          <size>24</size>
                        </Parameters>
                      </SetFontSize>
                      <Write>
                        <Parameters>
                          <value>Fest</value>
                        </Parameters>
                      </Write>
                      <SelectAll></SelectAll>
                      <SetFontSize>
                        <Parameters>
                          <size>24</size>
                        </Parameters>
                      </SetFontSize>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Ok>
                <Parameters>
                  <validate>true</validate>
                </Parameters>
              </Ok>
            </Actions>
          </Edit>
          <ReadForm>
            <Actions>
              <RichText>
                <Parameters>
                  <attrId>92</attrId>
                </Parameters>
                <Actions>
                  <ReadFontSize>
                    <Parameters>
                      <ExpectedFontSize>24</ExpectedFontSize>
                    </Parameters>
                  </ReadFontSize>
                </Actions>
              </RichText>
            </Actions>
          </ReadForm>
          <Edit>
            <Actions>
              <Content>
                <Actions>
                  <RichText>
                    <Parameters>
                      <attrId>92</attrId>
                    </Parameters>
                    <Actions>
                      <Clear></Clear>
                      <SetFontSize>
                        <Parameters>
                          <size>12</size>
                        </Parameters>
                      </SetFontSize>
                      <Write>
                        <Parameters>
                          <value>Select several characters</value>
                        </Parameters>
                      </Write>
                    </Actions>
                  </RichText>
                </Actions>
              </Content>
              <Ok>
                <Parameters>
                  <validate>true</validate>
                </Parameters>
              </Ok>
            </Actions>
          </Edit>
          <ReadForm>
            <Actions>
              <RichText>
                <Parameters>
                  <attrId>92</attrId>
                </Parameters>
                <Actions>
                  <ReadFontSize>
                    <Parameters>
                      <ExpectedFontSize>12</ExpectedFontSize>
                    </Parameters>
                  </ReadFontSize>
                </Actions>
              </RichText>
            </Actions>
          </ReadForm>
          <Logout>
          	<Actions>
          		<ReadPopUpMessage>
          			<Actions>
          				<ElementAt>
          					<Parameters>
          						<index>0</index>
          					</Parameters>
          					<ExpectedResult>Do you really want to quit TEEXMA?</ExpectedResult>
          				</ElementAt></Actions>
          		</ReadPopUpMessage>
          		<CloseConfirmationPopup>
          			<Parameters>
          				<result>true</result>
          			</Parameters>
          		</CloseConfirmationPopup></Actions>
          </Logout>
        </Actions>
      </MainWindow>
    </Actions>
  </TxInterface>
</Actions>